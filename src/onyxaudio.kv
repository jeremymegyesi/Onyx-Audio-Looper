<MainGrid>
    my_controls: my_controls

    FloatLayout:
        cols:2
        size: root.width, root.height

        ControlButtons:
            id: my_controls

        Label:
            text:"recording1.wav"


<ControlButtons>
    record_button: record_button
    stop_button: stop_button
    play_button: play_button
    col:1

    FloatLayout:
        height: root.height
        width: root.width/4

        Button:
            id: record_button
            text: "Record Audio"
            background_color: 0, 0.3, 0, 1
            background_normal: ''
            size_hint: 1, 1/3
            pos_hint: {"top":1}
            on_press: root.record_clicked()

        Button:
            id: stop_button
            text: "Stop Recording"
            background_color: 0.3, 0, 0, 1
            background_normal: ''
            size_hint: 1, 1/3
            pos_hint: {"y":1/3}
            on_press: root.stop_clicked()
            disabled: True

        Button:
            id: play_button
            text: "Playback"
            background_color: 0, 0.2, 0.5, 1
            background_normal: ''
            size_hint: 1, 1/3
            on_press: root.audio_broker.playback_recording()