<MainGrid>
    my_controls: my_controls
    recordings_view: recordings_view

    FloatLayout:
        cols:2
        size: root.width, root.height

        ControlButtons:
            id: my_controls

        GridLayout:
            size_hint: (0.6, 1)
            pos_hint: {"x": 0.4}
            cols: 1

            Label:
                size_hint: (1, 0.1)
                text: "My Recordings"

            ScrollView:
                id: recordings_view
                my_gl: my_gl

                GridLayout:
                    id: my_gl
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    size_hint_x: None
                    width: root.recordings_view.width


<ControlButtons>
    record_button: record_button
    stop_button: stop_button
    play_button: play_button
    col:1

    FloatLayout:
        height: root.height
        width: root.width/4

        Button:
            id: record_button
            text: "Record Audio"
            background_color: 0, 0.3, 0, 1
            background_normal: ''
            size_hint: 1, 1/3
            pos_hint: {"top":1}
            on_press: root.record_clicked()

        Button:
            id: stop_button
            text: "Stop Recording"
            background_color: 0.3, 0, 0, 1
            background_normal: ''
            size_hint: 1, 1/3
            pos_hint: {"y":1/3}
            on_press: root.stop_clicked()
            disabled: True

        Button:
            id: play_button
            text: "Playback"
            background_color: 0, 0.2, 0.5, 1
            background_normal: ''
            size_hint: 1, 1/3
            on_press: root.audio_broker.playback_recording()